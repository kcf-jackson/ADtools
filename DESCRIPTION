Package: ADtools
Type: Package
Title: Automatic Differentiation Toolbox
Version: 0.5.5
Authors@R: c(
    person("Chun Fung", "Kwok", email = "kwokcf@unimelb.edu.au", role = c("aut", "cre"), comment = c(ORCID = "0000-0002-0716-3879")),
